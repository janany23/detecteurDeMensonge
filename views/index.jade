extends layout

block content
  #title
    h1= title
  img.image(id='imgMain', src='/images/image1.png')
  .content
    button(id='getQuestions', class='buttonMain', href='/questions') Nos questions
    button(id='goTest', class='buttonMain', href='/test') Lancer un test

  script(type='text/javascript').
    $('#getQuestions').on('click', function () {
      window.location.href = '/questions';
    });
    $('#goTest').on('click', function () {
      window.location.href = '/test';
    });